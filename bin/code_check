#!/usr/bin/env sh
SRC_DIR="`pwd`"

cd "`dirname "$0"`"
cd ..

./../../bin/parallel-lint ./src
./../../bin/phpunit
./../../bin/php-cs-fixer fix -v ./src
./../../bin/phpcbf --standard=PSR12 --extensions=php,twig ./src
./../../bin/phpstan analyse src/ --level=1
./../../bin/phpcs -n -p --standard=PSR12 --extensions=php,twig ./src
