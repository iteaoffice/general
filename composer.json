{
    "name": "iteaoffice/general",
    "type": "library",
    "license": "proprietary",
    "description": "Code to manage general elements",
    "keywords": [
        "general"
    ],
    "homepage": "https://itea3.org",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.itea4.org"
        }
    ],
    "authors": [
        {
            "name": "Johan van der Heide",
            "email": "johan.van.der.heide@itea3.org"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4",
        "laminas/laminas-mvc": "^3.0.1",
        "laminas/laminas-mvc-form": "^1.0.0",
        "laminas/laminas-code": "3.3.1",
        "laminas/laminas-mvc-console": "^1.2.0",
        "laminas/laminas-mvc-plugins": "^1.0.1",
        "laminas/laminas-navigation": "^2.9.0",
        "laminas/laminas-math": "^3.1.1",
        "jield-webdev/bjy-authorize": "^1.4.0",
        "doctrine/doctrine-orm-module": "@stable",
        "mailjet/mailjet-apiv3-php": "1.4.*",
        "ext-json": "*",
        "laminas/laminas-dependency-plugin": "^0.2"
    },
    "require-dev": {
        "iteaoffice/testing": "^1.2",
        "iteaoffice/affiliation": "^4.1",
        "iteaoffice/search": "^1.1",
        "iteaoffice/project": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "General\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GeneralTest\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev",
            "dev-develop": "4.1.x-dev"
        }
    },
    "scripts": {
        "check": [
            "@php-lint",
            "@phpstan",
            "@cs"
        ],
        "fix": [
            "@cbf",
            "@cs-fix"
        ],
        "php-lint": "./vendor/bin/parallel-lint src",
        "phpstan": "./vendor/bin/phpstan analyse src/ --level=1",
        "cs": "./vendor/bin/phpcs",
        "cbf": "./vendor/bin/phpcbf",
        "cs-fix": "./vendor/bin/php-cs-fixer fix -v src",
        "test": "./vendor/bin/phpunit"
    }
}
