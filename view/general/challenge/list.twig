{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-challenge-list")) %}

{% do form.prepare() %}
{{ form().openTag(form)|raw }}
{% set filter = form.get('filter') %}

<input type="hidden" name="filter[order]" value="{{ order }}">
<input type="hidden" name="filter[direction]" value="{{ direction }}">

<div class="row">

    <div class="col-md-10">
        <h1>{{ translate("txt-challenge-list") }} {{ challengeLink(null, 'new','button') }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p class="lead">{{ translate("txt-challenge-list-explanation") }}</p>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    {{ formelement(filter.get('search')) }}
                    <span class="input-group-btn">{{ formelement(form.get('submit')) }}</span></div>
            </div>
        </div>

        {% if paginator.pageRange > 0 %}
            <table class="table table-hover table-striped table-condensed">
                <thead>
                <tr>
                    <th>{% include 'general/partial/sortable-table-header' with {'route': 'zfcadmin/challenge/list', 'criteria': 'id', 'text': translate('txt-id')} %}</th>
                    <th>{% include 'general/partial/sortable-table-header' with {'route': 'zfcadmin/challenge/list', 'criteria': 'challenge', 'text': translate('txt-challenge')} %}</th>
                    <th>{{ translate("txt-example") }}</th>
                    <th>{{ translate("txt-amount-of-projects") }}</th>
                    <th>{{ translate("txt-amount-of-booths") }}</th>
                </tr>
                </thead>
                <tbody>
                {% for challenge in paginator.getCurrentItems() %}
                    <tr>
                        <td>{{ challenge.id }} {{ challengeLink(challenge,'edit', 'icon') }}</td>
                        <td>{{ challengeLink(challenge,'view-admin','name') }}
                            <div class="pull-right">{{ challengeLink(challenge,'view','icon') }}</div>
                        </td>
                        <td><a class="btn btn-sm"
                               style="color:#{{ challenge.frontColor }}; background-color:#{{ challenge.backgroundColor }}">{{ challenge }}</a>
                        </td>
                        <td>{{ challenge.projectChallenge.count() }}</td>
                        <td>{{ challenge.boothChallenge.count() }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% include 'general/partial/pagination-control' %}
        {% else %}
            {{ ztbalert().info(translate("txt-no-challenges-could-be-found"))|raw }}
        {% endif %}
    </div>
    <div class="col-md-2">
        <div class="well well-sm">
            <fieldset>

                <div class="form-group">
                    {{ ztbformelement(form.get('submit')) }}
                    {{ ztbformelement(form.get('clear')) }}
                </div>
            </fieldset>
        </div>
    </div>
</div>

{{ form().closeTag()|raw }}

