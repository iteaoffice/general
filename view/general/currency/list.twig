{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-currency-list")) %}

{% do form.prepare() %}
{{ form().openTag(form)|raw }}
{% set filter = form.get('filter') %}

<input type="hidden" name="filter[order]" value="{{ order }}">
<input type="hidden" name="filter[direction]" value="{{ direction }}">

<div class="row">

    <div class="col-md-10">
        <h1 class="display-4">{{ translate("txt-currency-list") }} {{ currencyLink(null, 'new','button') }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p class="lead">{{ translate("txt-currency-list-explanation") }}</p>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    {{ formelement(filter.get('search')) }}
                    <span class="input-group-btn">{{ formelement(form.get('submit')) }}</span></div>
            </div>
        </div>

        {% if paginator.pageRange > 0 %}
            <table class="table table-hover table-striped table-condensed table-sm">
                <thead>
                <tr>
                    <th>{% include 'general/partial/sortable-table-header' with {'route': 'zfcadmin/currency/list', 'criteria': 'id', 'text': translate('txt-id')} %}</th>
                    <th>{% include 'general/partial/sortable-table-header' with {'route': 'zfcadmin/currency/list', 'criteria': 'name', 'text': translate('txt-name')} %}</th>
                    <th>{% include 'general/partial/sortable-table-header' with {'route': 'zfcadmin/currency/list', 'criteria': 'iso4217', 'text': translate('txt-iso4217')} %}</th>
                    <th>{% include 'general/partial/sortable-table-header' with {'route': 'zfcadmin/currency/list', 'criteria': 'symbol', 'text': translate('txt-symbol')} %}</th>
                    <th>{{ translate("txt-exchange-rate") }}</th>
                </tr>
                </thead>
                <tbody>
                {% for currency in paginator.getCurrentItems() %}
                    <tr>
                        <td>{{ currency.id }} {{ currencyLink(currency,'edit', 'icon') }}</td>
                        <td>{{ currencyLink(currency,'view','name') }}</td>
                        <td>{{ currency.iso4217 }}</td>
                        <td>{{ currency.symbol }}</td>
                        <td>{{ generalService.findActiveExchangeRate(currency).rate }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% include 'general/partial/pagination-control' %}
        {% else %}
            {{ ztbalert().info(translate("txt-no-countries-could-be-found"))|raw }}
        {% endif %}
    </div>
    <div class="col-md-2">
        <div class="well well-sm">
            <fieldset>
                <div class="form-group row">
                    {{ ztbformelement(form.get('submit')) }}
                    {{ ztbformelement(form.get('clear')) }}
                </div>
            </fieldset>
        </div>
    </div>
</div>

{{ form().closeTag()|raw }}

