{% do form.prepare() %}
{% do form.setAttribute('class','form-horizontal') %}

{{ form().openTag(form)|raw }}

{% set webInfo = form.get('general_entity_webinfo') %}

{{ ztbformelement(webInfo.get('id')) }}
{{ ztbformelement(webInfo.get('info')) }}
{{ ztbformelement(webInfo.get('subject')) }}
{{ ztbformelement(webInfo.get('sender')) }}
{{ ztbformelement(webInfo.get('template')) }}
{{ ztbformelement(webInfo.get('content')) }}


<div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {% if form.has('delete') %}
            {{ ztbformelement(form.get('delete')) }}
        {% endif %}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}

{% do headScript().appendFile("//cdn.tinymce.com/4/tinymce.min.js",'text/javascript') %}

<script type="text/javascript">
    tinymce.init({
        selector: 'textarea'
    });
</script>