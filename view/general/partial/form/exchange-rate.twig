{% do form.prepare() %}
{{ form().openTag(form)|raw }}



<div class="row mb-3">
    <label class="col-sm-3 col-form-label">{{ translate("txt-currency") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ currencyLink(currency,'view','name') }}</p>
    </div>
</div>

{% set currency = form.get('general_entity_exchangerate') %}

{{ ztbformelement(currency.get('rate')) }}
{{ ztbformelement(currency.get('date')) }}

{{ formelement(form.get('csrf')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {% if form.has('delete') %}
            {{ ztbformelement(form.get('delete')) }}
        {% endif %}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}