{% do form.prepare() %}
{{ form().openTag(form)|raw }}

{% set currency = form.get('general_entity_currency') %}

{{ lbs5formelement(currency.get('name')) }}
{{ lbs5formelement(currency.get('iso4217')) }}
{{ lbs5formelement(currency.get('symbol')) }}

{{ formelement(form.get('csrf')) }}

