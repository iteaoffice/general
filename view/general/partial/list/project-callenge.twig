<h3>{{ translate("txt-projects-with-challenge-%s")|format(country) }}</h3>

{% for projectService in projects %}

<div class="thumbnail information-box">

    <div class="information-box-header clearfix">
        {{ projectService.project.number }}
        <h3 class="information-box-title">
            {{ projectLink(projectService,'view','name-without-number') }}
        </h3>
    </div>

    <div class="information-box-image">
        {{ projectLogo(projectService, 'img-rounded') }}
    </div>


    <dl>
        <dt>{{ translate("txt-program-call") }}</dt>
        <dd>{{ callLink(projectService.project.call,'view') }}</dd>
        <dt>{{ translate("txt-status") }}</dt>
        <dd>{{ projectService.parseStatus() }}</dd>
        <dt>{{ translate("txt-project-leader") }}</dt>
        {% set contactService = contactServiceProxy(projectService.project.contact) %}
        <dd>{{ contactService.parseFullname() }}</dd>
    </dl>

</div>