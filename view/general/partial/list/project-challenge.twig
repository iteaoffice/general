{% if projects|length > 0 %}
    <h3>{{ translate("txt-projects-with-challenge-%s")|format(challenge) }}</h3>

    {% for project in projects %}

        <div class="thumbnail information-box">

            <div class="information-box-header clearfix">
                {{ project.number }}
                <h3 class="information-box-title">
                    {{ projectLink(project,'view','name-without-number') }}
                </h3>
            </div>

            <div class="information-box-image">
                {{ projectLogo(project, 200) }}
            </div>
        </div>
    {% endfor %}
{% endif %}
