{% if  articles|length > 0 %}
    <div class="well well-sm">
        <h3>{{ translate("txt-related-articles-for-country-%s")|format(country) }}</h3>

        <ul class="list-unstyled list-documents">
            {% for article in articles %}
                <li>
                    {{ articleTypeIcon(article.type) }}
                    {{ articleLink(article,'view-public','name') }}
                </li>
            {% else %}
                {{ ztbalert().info(translate("txt-no-article-found"))|raw }}
            {% endfor %}

            {% if limit != 0 %}
                {{ countryLink(country,'view-article', 'more') }}
            {% endif %}
        </ul>
    </div>
{% endif %}