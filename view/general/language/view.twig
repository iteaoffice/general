{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-language-%s")|format(language)) %}

<h1>{{ translate("txt-language-%s")|format(language) }} {{ languageLink(language,'edit','button') }}</h1>

<h2>{{ translate("txt-language-information") }}</h2>
<dl class="dl-horizontal">
    <dt>{{ translate("txt-language-name") }}</dt>
    <dd>{{ language.language }}</dd>
    <dt>{{ translate("txt-language-locale") }}</dt>
    <dd>{{ language.locale }}</dd>

</dl>